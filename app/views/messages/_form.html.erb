<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="container">
    <div class="form-horizontal">
    <div class="form-group">
<div class="col-sm-2">
  <label class="control-label">名前</label>
  </div>
<div class="col-sm-10">
  <%= f.text_area :name %>
  </div>
  </div>
  
  
  
<div class="form-group">
  <div class="col-sm-2">
  <label class="control-label">内容</label>
  </div>
  <div class="col-sm-10">
    <%= f.text_area :body %>
    </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-2">
  <label class="control-label">年齢</label>
  </div>
  
  <div class="col-sm-10">
   <%= f.text_area :age %>
   </div>
    </div>
    <div class="form-group">
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
  </div>
  
  
  </div>
  </div>
<% end %>