
<style>
    .input_title{
        color: #fff;
        border-radius: 5px;
    }
    
    .mt{
        margin-top: 20px;
    }
    

    

    
</style>


<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
<% @messages.each do |message| %>
<span class="label label-info"><%= message.name %></span>
<%= message.body %>
<br>
<% end %>
</div>



<div class="panel-body">
    <div class="form-group mt">
<%= form_for(Message.new) do |f| %>
<div class="col-sm-2 control-label label-success input_title">名前</div>
<div class="col-sm-10">
    <%= f.text_area :name %>
    </div>
</div>

<div class="form-group mt">

<div class="col-sm-2 control-label label-success input_title">内容</div>
<div class="col-sm-10">
    <%= f.text_area :body %>
    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-10 mt">
<%= f.submit %>
<% end %>
</div>

</div>


</div>
</div>
